<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/feature_fragment"
    android:background="@color/message_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/main_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:tabBackground="@drawable/feature_sub_tab_bg_style"
            app:tabIndicatorColor="@color/title"
            app:tabIndicatorHeight="0dp"
            app:tabTextAppearance="@style/sub_tab_size"
            app:tabSelectedTextColor="@color/title"
            app:tabTextColor="@color/feature_tab_unchecked"
            />
        <ImageView
            android:id="@+id/tab_img"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_subscribe_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>