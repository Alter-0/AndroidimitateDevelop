<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/tab2_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/read_listview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/no_read"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">
        <TextView
            android:text="@string/feature_no_content"
            android:textColor="@color/feature_sub_tab1_name"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"/>
        <Button
            android:id="@+id/toread"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="@string/goto_read"
            android:background="@drawable/feature_sub_tab_read_btn"
            android:textSize="15sp"
            android:textColor="@color/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout>
</RelativeLayout>